@model TECHNOLOGY_SHOP.Models.tb_SanPham

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CHỈNH SỬA THÔNG TIN</h2>
<h4>Sản phẩm</h4>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div style="display:flex">

        <div style="margin: 20px">
            <br /><br /><br />
            <img src="@Model.hinh" id="pictureUpload" style="width: 400px; height: 400px" />
        </div>
        <div class="form-horizontal" style="width:400px">

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.idSP)

            <div class="form-group">
                <div class="col-md-10">
                    <label>Loại sản phẩm</label>
                    @Html.DropDownListFor(model => model.idLoaiSP, ViewBag.lstLoaiSP as SelectList, "Chọn loại sản phẩm", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.idLoaiSP, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <label>Tên sản phẩm</label>
                    @Html.EditorFor(model => model.tenSP, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.tenSP, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <label>Hình ảnh</label>
                    @Html.EditorFor(model => model.hinh, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.hinh, "", new { @class = "text-danger" })
                    <input type="file" name="fileUpload" id="fileUpload" accept="image/*" style="display:none;" />
                    <br />
                    <input type="button" id="btnUpload" value="Chọn" class="btn btn-success" />
                    <br />
                    @section upload
                {
                        <script>
                            $(function () {
                                $('#btnUpload').click(function () {
                                    $('#fileUpload').trigger('click');
                                });
                            });
                            $('#fileUpload').change(function () {
                                if (window.FormData !== undefined) {
                                    var fileUpload = $('#fileUpload').get(0);
                                    var files = fileUpload.files;
                                    var formData = new FormData();
                                    formData.append('file', files[0]);
                                    $.ajax(
                                        {
                                            type: 'POST',
                                            url: '/HangSanPham/ProcessUpload',
                                            contentType: false,
                                            processData: false,
                                            data: formData,
                                            success: function (urlImage) {
                                                $('#pictureUpload').attr('src', urlImage);
                                                $('hinh').val(urlImage);
                                            },
                                            error: function (err) {
                                                alert('Error ', err.statusText);

                                            }
                                        });
                                }
                            });
                        </script>
                    }
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <label>Trạng thái</label>
                    @Html.EditorFor(model => model.trangThai)
                    @Html.ValidationMessageFor(model => model.trangThai, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <label>Giá bán</label>
                    @Html.EditorFor(model => model.giaBan, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.giaBan, "", new { @class = "text-danger" })
                </div>
            </div>

            

            <div class="form-group">
                <div class="col-md-10">
                    <label>Số lượng tồn</label>
                    @Html.EditorFor(model => model.soLuongTon, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.soLuongTon, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <label>Ngày cập nhật</label>
                    @Html.EditorFor(model => model.ngayCapNhat, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ngayCapNhat, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Lưu thay đổi" class="btn btn-success" />
                </div>
            </div>
        </div>
        <div>
            <div class="form-group">
                <div class="col-md-10">
                    <br /><br />
                    <label>Mô tả</label>
                    @Html.TextAreaFor(model => model.moTa, new { @class = "form-control", @rows = 10 })
                    @Html.ValidationMessageFor(model => model.moTa, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

    </div>


}

<div>
    @Html.ActionLink("Trở về danh sách", "Index")
</div>
