@model IEnumerable<TECHNOLOGY_SHOP.Models.tb_LoaiSanPham>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>DANH SÁCH LOẠI SẢN PHẨM</h2>
<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th> Mã loại </th>
        <th> Tên loại </th>
        <th> Hãng sản xuất </th>
        <th> Trạng thái </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.idLoaiSP)</td>
        <td>@Html.DisplayFor(modelItem => item.tenLoaiSP)</td>
        <td>@Html.DisplayFor(modelItem => item.tb_HangSanPham.tenHang)</td>
        <td>@String.Format("{0}", item.trangThai)</td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.idLoaiSP }) |
            @Html.ActionLink("Chi tiết ", "Detail", new { id = item.idLoaiSP }) |
            @Html.ActionLink("Xóa", "Delete", new { id = item.idLoaiSP })
        </td>
    </tr>
    }
</table>